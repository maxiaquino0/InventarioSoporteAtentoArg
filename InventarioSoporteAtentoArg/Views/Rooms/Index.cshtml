@model IEnumerable<InventarioSoporteAtentoArg.Models.Room>

@{
    ViewBag.Title = "Inicio";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", new { }, new { @class = "btn btn-primary btn-sm" } )
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Platform.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Platform.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.RoomID }, new { @class = "btn btn-primary btn-xs" }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.RoomID }, new { @class = "btn btn-info btn-xs" }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.RoomID }, new { @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
