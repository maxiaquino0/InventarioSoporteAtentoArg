@model IEnumerable<InventarioSoporteAtentoArg.Models.Location>

@{
    ViewBag.Title = "Inicio";
}

<h2>Inicio</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", "", new { Class = "action add btn btn-primary btn-sm", title = "Nueva ubicación" })
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Platform.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Floor.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Room.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PositionIT)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Desk)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InventaryObject.EtiquetteAtento)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Platform.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Floor.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Room.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PositionIT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Desk)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InventaryObject.EtiquetteAtento)
        </td>
        <td>
            @Html.ActionLink("Mover", "Edit", new { id=item.LocationID }, new { @class = "btn btn-primary btn-xs" })
            @Html.ActionLink("Detalles", "Details", new { id=item.LocationID }, new { @class = "btn btn-info btn-xs" })
            @Html.ActionLink("Eliminar", "Delete", new { id=item.LocationID }, new { @class = "btn btn-danger btn-xs" })
        </td>
    </tr>
}

</table>
